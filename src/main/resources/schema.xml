	<schema name="TESTDB" checkSQLschema="false" sqlMaxLimit="100" dataNode="dn1">
		
	</schema>

	<dataNode name="dn1" dataHost="host53" database="test" />
	
	<dataHost name="host53" maxCon="1000" minCon="10" balance="1"
